<%-include ('../partials/header')%>
<main class='container'>
<!-- Extra Member display when there is an extra member -->
<%if(method && quantity && extraMember){%>
<div class ='card'>
    <p class ='card-body'><%=extraMember%></p>
</div>
 <%}%>
 <!-- Input page to show the cohort members'details before assigning team -->
    <%if(! method || !quantity){%>
        <div class="d-flex flex-row bd-highlight">
            <h4 class="text-primary" >Team Picker</h4>
        </div>
<!-- Cohort name -->
    <div class= 'card'>
        <div class="d-flex flex-row justify-content-around mt-3">
            <h4><%=cohort.cohort_name%></h4>
<!-- Edit -->
            <div>
                <a class='btn btn-outline-success' href='/cohorts/<%=cohort.id%>/edit'>Edit</a>
            </div>
<!-- Delete -->
            <div>
                <form action = '/cohorts/<%=cohort.id%>' method ='POST'>
                    <input type='hidden' name ='_method' value="DELETE">
                    <input
                        type='submit'
                        class = 'btn btn-outline-danger'
                        value='Delete'
                    >
                </form>
            </div>
        </div>
<!-- Cohort members --> 
        <div class="card-body mb4">
            <p class="p-2 flex-shrink-1 bd-highlight">  
            <%=cohort.members%>
            </p>
        </div>
    </div>
<%}%>



<form action='/cohorts/<%=cohort.id%>'> 
<div class="d-flex flex-column bd-highlight">
    <div class='card-img-top mt-2 mb-2'>
    <h4>Method</h4>
    </div>
    <div class="custom-control custom-radio mb-2">
        <input type="radio" name="method" value="teamCount" class="custom-control-input">
        <label class="custom-control-label">Team Count</label>
    </div>
    <div class="custom-control custom-radio mb-2">
        <input type="radio" name="method"  value="numberPerTeam" class="custom-control-input">
        <label class="custom-control-label">Number Per Team</label>
    </div>
</div>

<div class="custom-control custom-radio mb-2">
    <label class="custom-control-label">Quantity</label>
   <div> <input text="radio" name="quantity" class="custom-control-input"></div>
</div>

<input class="btn btn-primary btn-sm btn-block" type="submit" value="Assign_Team">
</form>

<!-- Team Pick when choosing method and quantity -->
<div><%if(method && quantity){%>
 <div class="d-flex flex-row justify-content-around mt-3">
    <h5 class ='card-body'>#</h5>     <h5 class ='card-body'>Members</h5>
</div>
<%for(let i=0;i<allTeamArray.length;i++){%>
<div class="d-flex flex-row justify-content-around mt-3">
    
       <p class ='card-body'><%=i+1%></p>   <p class='card-body'><%=allTeamArray[i]%>  </p> 
</div>
<%}%>
    
<%}%>
</div>










    </div>
</main>





<%-include ('../partials/footer')%>