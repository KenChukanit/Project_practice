<%-include ('../partials/header')%>
<div class="d-flex flex-row bd-highlight">
<h3>Super Team Picker</h3>
</div>
<form action='/cohorts' method='POST'>
  <!-- logo_url -->
    <div class='form-group'>
        <h4>Logo Url</h4>
        <input
        type='text'
        class='form-control'
        name='logo_url'
        placeholder='example http://www.example.com/some.png'
        >
    </div>
<!-- cohort name -->
    <div class='form-group'>
        <h4>Name</h4>
        <input
        type='text'
        class='form-control'
        name='cohort_name'
        placeholder='Flying Funks'
       
        >
    </div>
<!-- picture -->
    <div class='form-group'>
        <h4>Members</h4>
        <input
        type='text'
        class='form-control'
        name='members'
        placeholder='Jon Snow,Daenerys,Melisandre,Arya Stark'
        
        >
    </div>


    <div class ="d-flex flex-row-reverse bd-highlight">
        <input type='submit' value='submit' class='btn btn-outline-success'>
    </div>
      </form>

    


<%-include ('../partials/footer')%>