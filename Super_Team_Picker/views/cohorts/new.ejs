<%-include ('../partials/header')%>
<main class='container'>
    <div class="d-flex flex-row bd-highlight">
        <h4 class="text-primary mb-4" >Super Team Picker</h4>
    </div>
<form action='/cohorts' method='POST'>
  <!-- logo_url -->
    <div class='form-group mb-4'>
        
        <input
        type='text'
        class='form-control'
        name='logo_url'
        placeholder='example http://www.example.com/some.png'
        >
    </div>
<!-- cohort name -->
    <div class='form-group mb-4'>
        <h5>Name</h5>
        <input
        type='text'
        class='form-control'
        name='cohort_name'
        placeholder='Flying Funks'
       
        >
    </div>
<!-- picture -->
    <div class='form-group mb-4'>
        <h5>Members</h5>
        <input
        type='text'
        class='form-control'
        row='20'
        name='members'
        placeholder='Jon Snow,Daenerys,Melisandre,Arya Stark'
        >
    </div>
    <div class ="d-flex flex-row-reverse bd-highlight">
        <input type='submit' value='submit' class='btn btn-outline-success'>
    </div>
      </form>
</main>
<%-include ('../partials/footer')%>